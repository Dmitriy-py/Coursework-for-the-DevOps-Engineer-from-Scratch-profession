global:
  scrape_interval: 15s
  external_labels:
    monitor: 'codelab-monitor'

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node_exporter'
    static_configs:
      - targets: [
          '{{ web_server_a_ip }}:9100',
          '{{ web_server_b_ip }}:9100'
        ]
      
        labels:
          group: 'webservers'

  - job_name: 'nginx_exporter'
    static_configs:
      - targets: [
          '{{ web_server_a_ip }}:9113',
          '{{ web_server_b_ip }}:9113'
        ]
        labels:
          group: 'webservers'
