auth_enabled: false

server:
  http_listen_port: 3100
  grpc_listen_port: 9095

common:
  instance_addr: 127.0.0.1
  path_prefix: /tmp/loki
  ring:
    instance_addr: 127.0.0.1
    kvstore:
      store: inmemory
  replication_factor: 1

schema_config:
  configs:
    - from: 2020-09-07
      store: boltdb-shipper
      object_store: filesystem
      schema: v12 # <--- Используем актуальную schema v12
      index:
        prefix: index_
        period: 24h

# ВАЖНО: storage_config и boltdb_shipper должны быть в корне для v12
storage_config:
  boltdb_shipper:
    active_index_directory: /loki/boltdb-shipper-active
    cache_location: /loki/boltdb-shipper-cache
    shared_store: filesystem
  filesystem:
    directory: /loki/chunks # <--- Директория для хранения чанков

limits_config:
  reject_old_samples: true
  reject_old_samples_max_age: 168h # 7 days
  max_query_length: 10000h
  max_query_series: 2000

# Отключаем compactor, чтобы избежать возможных проблем при старте
compactor:
  compaction_interval: 10m
  working_directory: /loki/compactor
  shared_store: filesystem
