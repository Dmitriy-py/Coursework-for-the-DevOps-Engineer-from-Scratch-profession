server:
  http_listen_port: 9080
  grpc_listen_port: 0
  log_level: debug

positions:
  filename: /tmp/positions.yaml

clients:
  - url: http://10.2.0.30:3100/loki/api/v1/push

scrape_configs:
- job_name: nginx_access_logs
  static_configs:
  - targets:
      - localhost
    labels:
      job: nginx_access
      __path__: {{ nginx_log_path }}/access.log
      host: "{{ ansible_hostname }}"
      env: production

- job_name: nginx_error_logs
  static_configs:
  - targets:
      - localhost
    labels:
      job: nginx_error
      __path__: {{ nginx_log_path }}/error.log
      host: "{{ ansible_hostname }}"
      env: production
